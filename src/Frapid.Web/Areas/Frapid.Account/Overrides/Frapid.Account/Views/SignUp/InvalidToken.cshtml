@inherits System.Web.Mvc.WebViewPage

@using Frapid.Account
@using Frapid.Areas
@using Frapid.i18n
@using System.Web.Mvc
@using System.Web.Mvc.Ajax
@using System.Web.Mvc.Html
@using System.Web.Routing

@{
    ViewBag.Title = "Invalid Confirmation Code";
    Layout = ViewBag.LayoutPath + ViewBag.Layout;
}
@if (CultureManager.IsRtl())
{
    <link rel="Stylesheet" href="@Href("~/assets/css/backend.rtl.css")" />
}
else
{
    <link rel="Stylesheet" href="@Href("~/assets/css/backend.css")" />
}

<div id="section" class="ui basic padded signup left aligned segment">
    <div class="ui container">
        <div class="ui header">Invalid Confirmation Code</div>
        <div class="ui divider"></div>
        <p>
            The supplied confirmation token is either invalid or expired.
        </p>
        <a href="/" class="ui small padded purple button">Return Home</a>
    </div>
</div>
